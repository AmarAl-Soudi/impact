@model IEnumerable<Impact.Mvc.Models.RssModel>


<table id="rss" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Link</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@item.Link" target="_blank">@Html.Encode(item.Title)</a>
                </td>
                <td>
                    @System.Web.HttpUtility.HtmlDecode(item.Description)
                </td>
                <td>
                    <a href="@item.Link" target="_blank">More</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/Scripts/jquery-1.10.2.js"></script>

<script>
    $(document).ready(function () {
        $('#rss').DataTable();
    });

</script>